<h1>
    <%= title %>

</h1>
<%- messages() %>
    <% if (errors) { %>
        <ul class="notice">
            <% errors.array().forEach(error=> { %>
                <li>
                    <%= error.msg %>
                </li>
                <% }) %>
        </ul>
        <% } %>

            <form action="/inv/addClassification" method="post" id="register-form">
                <p>Field is required!</p>
                <label for="classification_name">Classification name:</label>
                <div>NAME MUST BE ALPHABETIC CHARACTERS ONLY WITH NO SPACE </div>
                <input type="text" name="classification_name" id="classification_name"
                    value="<%= typeof classification_name !== 'undefined' ? classification_name : '' %>" required
                    pattern="[A-Za-z]+">
                <br>
                <button type="submit" id="register-button">Add Classification</button>

            </form>