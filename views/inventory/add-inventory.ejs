<h1>
    <%= title %>

</h1>
<%- messages() %>
    <% if (errors) { %>
        <ul class="notice">
            <% errors.array().forEach(error=> { %>
                <li>
                    <%= error.msg %>
                </li>
                <% }) %>
        </ul>
        <% } %>

            <form action="/inv/addInventory" method="post" id="register-form">
                <p>All fields are required!</p>
                <label for="classification_id">Classification:</label>
                <%- classificationList %>
                    <label for="inv_make">Make:</label>
                    <input type="text" name="inv_make" id="inv_make" minlength="3"
                        value="<%= typeof inv_make !== 'undefined' ? inv_make : '' %>" required
                        placeholder="Min of 3 characters"> <br>
                    <label for="inv_model">Model:</label>
                    <input type="text" name="inv_model" id="inv_model" minlength="3"
                        value="<%= typeof inv_model !== 'undefined' ? inv_model : '' %>" required
                        placeholder="Min of 3 characters"> <br>
                    <label for="inv_description">Description:</label>
                    <input type="text" name="inv_description" id="inv_description"
                        value="<%= typeof inv_description !== 'undefined' ? inv_description : '' %>" required><br>
                    <label for="inv_image">Image Path:</label>
                    <input type="text" name="inv_image" id="inv_image" value="/images/vehicles/no-image.png" required>
                    <br>
                    <label for="inv_thumbnail">Thumbnail Path:</label>
                    <input type="text" name="inv_thumbnail" id="inv_thumbnail"
                        value="/images//images/vehicles/no-image-tn.png" required> <br>
                    <label for="inv_price">Price:</label>
                    <input type="number" name="inv_price" id="inv_price"
                        value="<%= typeof inv_price !== 'undefined' ? inv_price : '' %>" required
                        placeholder="decimal or integer"> <br>
                    <label for="inv_year">Year:</label>
                    <input type="text" name="inv_year" id="inv_year" minlength="4" maxlength="4" pattern="\d{4}"
                        value="<%= typeof inv_year !== 'undefined' ? inv_year : '' %>" required
                        placeholder="4 digit year"> <br>
                    <label for="inv_miles">Miles:</label>
                    <input type="number" name="inv_miles" id="inv_miles" required
                        value="<%= typeof inv_miles !== 'undefined' ? inv_miles : '' %>" placeholder="digits only"> <br>
                    <label for="inv_color">Color:</label>
                    <input type="text" name="inv_color" id="inv_color"
                        value="<%= typeof inv_color !== 'undefined' ? inv_color : '' %>" required> <br>
                    <button type="submit" id="register-button">Add Vehicle</button>

            </form>