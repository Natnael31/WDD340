<h1>
    <%= title %>

</h1>
<%- messages() %>
    <% if (errors) { %>
        <ul class="notice">
            <% errors.array().forEach(error=> { %>
                <li>
                    <%= error.msg %>
                </li>
                <% }) %>
        </ul>
        <% } %>

            <form action="/inv/delete" method="post" id="register-form" class="deleteForm">
                <p>Confirm Deletion - The delete is permanent</p>
                <label for="classification_id">Classification:</label>
                <%- classificationList %>
                    <label for="inv_make">Make:</label>
                    <input type="text" name="inv_make" id="inv_make" minlength="3"
                        value="<%= typeof inv_make !== 'undefined' ? inv_make : '' %>" required
                        placeholder="Min of 3 characters" readonly> <br>
                    <label for="inv_model">Model:</label>
                    <input type="text" name="inv_model" id="inv_model" minlength="3"
                        value="<%= typeof inv_model !== 'undefined' ? inv_model : '' %>" required
                        placeholder="Min of 3 characters" readonly> <br>
                    <label for="inv_price">Price:</label>
                    <input type="number" name="inv_price" id="inv_price"
                        value="<%= typeof inv_price !== 'undefined' ? inv_price : '' %>" required
                        placeholder="decimal or integer" readonly> <br>
                    <label for="inv_year">Year:</label>
                    <input type="text" name="inv_year" id="inv_year" minlength="4" maxlength="4" pattern="\d{4}"
                        value="<%= typeof inv_year !== 'undefined' ? inv_year : '' %>" required
                        placeholder="4 digit year" readonly> <br>
                    <button type="submit" id="register-button">Delete Vehicle</button>

                    <input type="hidden" name="inv_id" <% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
                        <% } %>>

            </form>