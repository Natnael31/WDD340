<header id="top-header">
    <span class="siteName">
        <a href="/" title="Return to home page">CSE Motors</a>
    </span>
    <div id="tools">
        <% if (locals.loggedin && user) { %>
            <!-- Client is logged in -->
            <a href="/account/">Welcome <%= user.account_firstname %></a>
            <a href="/account/logout">Logout</a>
            <% } else { %>
                <!-- Client is not logged in -->
                <li><a title="Click to log in" href="/account/login">My Account</a></li>
                <% } %>
    </div>
</header>